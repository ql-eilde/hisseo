<!DOCTYPE html>
<html>
<head>
  <title>Hisseo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?sensor=false&libraries=places&language=fr&region=FR&key=AIzaSyBKzdqWBAURcThA7ESXsKi5QfPyy6PddOo" %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "https://js.stripe.com/v2/" %>
  <%= csrf_meta_tags %>
  <%= tag :meta, :name => "stripe-key", :content => ENV["STRIPE_PUBLISHABLE_KEY"] %>
  <script>
    $(function() {
      $( ".datepicker" ).pickadate();
      $( ".timepicker" ).pickatime();
    });
  </script>
</head>

<% if request.url() == root_url %>
  <body class="site">
    <%= render 'layouts/headerindex' %>

    <div class="container site-content">
      <% flash.each do |name, msg| %>
        <% if msg.is_a?(String) %>
          <div class="alert alert-<%= name.to_s == "notice" ? "success" : "danger" %> alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <%= content_tag :div, msg, :id => "flash_#{name}" %>
          </div>
        <% end %>
      <% end %>

      <%= yield %>
    </div>

    <%= render "layouts/footer" %>
  </body>
<% else %>
  <body class="site-all">
    <%= render 'layouts/header' %>

    <div class="container site-content">
      <% flash.each do |name, msg| %>
        <% if msg.is_a?(String) %>
          <div class="alert alert-<%= name.to_s == "notice" ? "success" : "danger" %> alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <%= content_tag :div, msg, :id => "flash_#{name}" %>
          </div>
        <% end %>
      <% end %>

      <%= yield %>
    </div>

    <%= render "layouts/footer" %>
  </body>
<% end %>
</html>