<% if !user_signed_in? %>
  <%= render "layouts/modal" %>
<% end %>
<!-- Navbar -->
<nav class="navbar navbar-default navbar-hisseo" style="background-color:transparent">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" style="color:white;font-weight:bold;" href="/">
        <%#= image_tag("#", width: "100px", height: "30px") %>
        Viaboat
      </a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        	<li class="dropdown">
	    		<a href="#" class="dropdown-toggle-index" data-toggle="dropdown" role="button" aria-expanded="false">Bonjour <%= current_user.first_name %>
	            	<span class="caret"></span></a>
	          	<ul class="dropdown-menu" role="menu">
	            	<li><%= link_to "Tableau de bord", manager_path %></li>
	            	<li><%= link_to "Mes réservations", purchases_path %></li>
	            	<li><%= link_to "Mon Profil", edit_user_registration_path %></li>
	            	<li class="divider"></li>
	            	<li><%= link_to "Déconnexion", destroy_user_session_path, method: :delete %></li>
	          	</ul>
	          	<li class="sell"><%= link_to new_listing_path, data: { no_turbolink: true } do %>
	            	<i class="glyphicon glyphicon-plus"></i> PROPOSER UN TRAJET
	          		<% end %>
	          	</li>
        	</li>
      	<% else %>
        	<li class="sign-index"><%= link_to "Connexion", "#login", data: {toggle: "modal"} %></li>
        	<li class="sign-index"><%= link_to "Inscription", "#signup", data: {toggle: "modal"} %></li>
        	<li class="sell" style="display:none"><%= link_to new_listing_path, data: { no_turbolink: true } do %>
          		<i class="glyphicon glyphicon-plus"></i> PROPOSER UN TRAJET
        		<% end %>
        	</li>
      	<% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div id="hero-wrapper">
  <div id="hero">
    <%= image_tag("golfe-du-morbihan.jpg", id: "pretzel-image") %>
  </div>
  <div id="catch-header">
    <div id="join-us">
      <h1>Le covoiturage de la mer</h1>
      <h2>Voyagez sur le bateau d'un particulier !</h2>
      <% if !user_signed_in? %>
        <%= link_to "#signup", data: {toggle: "modal"}, class: "btn btn-primary", style: "margin-top:20px;margin-bottom:10px;background-color:#00c5cc;border-color:#00c5cc" do %>
          <i class="fa fa-ship fa-2x" style="float:left;margin-right:20px;margin-top:4px;"></i>
          <div id="join-facebook">Inscrivez-vous pour proposer un trajet</div>
        <% end %>
      <% end %>
    </div>
    <div id="search-bar">
      <div class="search-form">
        <%= form_tag listings_path, style: "padding:10px 0 0 50px", method: "get" do %>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-3 col-sm-3 col-md-3">
                <input class="form-control search-box" type="text" name="departure" id="search_address_departure" placeholder="De" autofocus="true" />
              </div>
              <div class="col-xs-3 col-sm-3 col-md-3">
                <input class="form-control search-box" type="text" name="arrival" id="search_address_arrival" placeholder="À" />
              </div>
              <div class="col-xs-3 col-sm-3 col-md-3">
                <input type="text" name="date" class="datepicker form-control search-date-box" placeholder="Date" />
              </div>
              <div class="col-xs-3 col-sm-3 col-md-3" style="padding-left:25px;">
                <%= submit_tag "Rechercher", name: nil, class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>