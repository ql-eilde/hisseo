<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @listing.image.url %>
    </div>
  </div>
  <div class="col-md-6">
    <h3><%= @listing.name %></h3>
    <p><%= @listing.price %> <%= t('euro') %></p>
    <p><%= @listing.description %></p>
    <br>
    <div class="center">
      <form method="get" action="/listings/<%= params[:id] %>/orders/new">
        <% @test = @listing.nombre_passager - @listing.compte_passager %>
        <% options_array = (1..@test).to_a.collect{|p| ["#{p}", p]} %>
        <%= select_tag(:compte_passager, options_for_select(options_array)) %>
      <input type="submit" value="RÃ©server un trajet" class="btn btn-primary">
      </form>
    </div>
  </div>
</div>

